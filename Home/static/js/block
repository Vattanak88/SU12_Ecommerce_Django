   <script>
        document.addEventListener("keydown", function (event) {
            // Disable F12
            if (event.key === "F12") {
                event.preventDefault();
            }
            // Disable Ctrl+Shift+I (Chrome, Edge, Firefox)
            if (event.ctrlKey && event.shiftKey && event.key === "I") {
                event.preventDefault();
            }
            // Disable Ctrl+Shift+J (Chrome Console)
            if (event.ctrlKey && event.shiftKey && event.key === "J") {
                event.preventDefault();
            }
            // Disable Ctrl+Shift+C (Elements Panel)
            if (event.ctrlKey && event.shiftKey && event.key === "C") {
                event.preventDefault();
            }
            // Disable Ctrl+U (View Source)
            if (event.ctrlKey && event.key === "u") {
                event.preventDefault();
            }
        });

        // Block right-click (context menu) on desktop and mobile
        document.addEventListener("contextmenu", function (event) {
            event.preventDefault();  // Prevents the right-click menu
        });

        // Optionally, block touch gestures on mobile if necessary
        document.addEventListener("touchstart", function (event) {
            // Example: block long press or other gestures on mobile
            event.preventDefault();
        });

    </script>